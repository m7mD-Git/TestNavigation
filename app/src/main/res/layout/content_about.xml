<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash2">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:id="@+id/logo"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headr"
        android:layout_gravity="bottom"
        android:text="@string/descriptionName"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headr"
        android:text="@string/description"
        android:textSize="18sp"
        android:id="@+id/co"

        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingBottom="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
android:orientation="horizontal"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/co"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/faceSign"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/ic_face"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            />
        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/twitterSign"
            android:background="@mipmap/ic_twitter"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"/>
        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/googleSign"
            android:background="@mipmap/ic_google"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"/>

    </LinearLayout>



</RelativeLayout>
