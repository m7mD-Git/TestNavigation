<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hotel"
        android:clickable="true">

        <!--               Hotels               /-->
        <LinearLayout
            android:id="@+id/cat1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/im1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lay_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="@color/ToolBarColor"
                android:paddingBottom="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/hotel" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Hotels"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="10dp"
                    android:text="1250 items"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <!--               Bazars               /-->

        <LinearLayout
            android:id="@+id/cat2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/cat1"
            android:background="@drawable/im2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="@color/ToolBarColor"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/souvenir" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Bazars"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="10dp"
                    android:text="500 items"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <!--               Safari               /-->

        <LinearLayout
            android:id="@+id/cat3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/cat2"
            android:background="@drawable/im3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="@color/ToolBarColor"
                android:paddingBottom="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/car" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Safari"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="10dp"
                    android:text="1500 items"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Home"
            android:textSize="40sp"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" /-->
        <!--ListView
            android:id="@+id/list"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        </ListView-->
    </RelativeLayout>
</ScrollView>