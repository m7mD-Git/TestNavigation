<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash1"
    android:gravity="center"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/logo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/signInUserName"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:gravity="center"
        android:alpha="0.4"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_text_appeer"
        android:textColor="#000000"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/signInPassword"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:gravity="center"
        android:inputType="textPassword"
        android:alpha="0.7"
        android:background="@drawable/edit_text_appeer"
        android:textColorHint="@color/white"
        android:textColor="#000000"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:id="@+id/signUpButton"
        android:layout_gravity="center_horizontal"
        android:background="@color/ToolBarColor"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign In Now ?"
        android:textColor="@android:color/white"
        android:id="@+id/CreateAccount"
        android:layout_gravity="center_horizontal"
        android:textSize="17sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Continue With"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:id="@+id/continu"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >
            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/faceSign"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/ic_face"
                android:layout_marginLeft="50dp"
                android:layout_alignParentLeft="true"
                />
            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/twitterSign"
                android:background="@mipmap/ic_twitter"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"/>
            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/googleSign"
                android:background="@mipmap/ic_google"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
