            android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="2dp" android:color="#000000" />
          />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:padding="0dp"
            android:shape="rectangle">
            <solid android:color="@color/ToolBarColor" />

        </shape>
    </item>
</selector>